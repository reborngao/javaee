<?xml version="1.0" encoding="utf-8"?>
<com.visabao.machine.widget.SlidingRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:text="@string/glabal_visabao"
        android:id="@+id/ri_title"
        android:textSize="@dimen/title_textsize"
        android:paddingLeft="20dp"
        android:background="@color/title_bg"
        />
    <View
        android:layout_below="@+id/ri_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line_height"
        android:id="@+id/listview_top_line"
        android:background="@drawable/line10"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/global_icon2"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/global_icon"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >
        <Button
            style="@style/buttonConmitStyle"
            android:layout_marginLeft="15dp"
            android:text="立即办理"
            android:id="@+id/btn_next"
            android:background="@drawable/login_btn1"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>


</com.visabao.machine.widget.SlidingRelativeLayout>