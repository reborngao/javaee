<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="62dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

    <LinearLayout
        android:layout_toLeftOf="@+id/item_tv_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/item_rb_check"
                android:textSize="@dimen/message_content_font_size"
                android:clickable="false"
                android:button="@drawable/radiobutton_organe"
                android:checked="false" />
        </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:id="@+id/item_tv_name"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    </RelativeLayout>
    <com.visabao.machine.widget.MeasureListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/measurelistview"
      />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@color/line"/>
</LinearLayout>
