<?xml version="1.0" encoding="utf-8"?>
<com.visabao.machine.widget.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    >
    <View
        android:id="@+id/message_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/message_buttom"
        android:layout_marginBottom="@dimen/btn_margin_bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/btn_margin_bottom"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btn_up"
                style="@style/buttonConmitStyle"
                android:text="上一步"
                android:background="@drawable/btn_orange"
                android:textColor="@color/orange"
                />
            <Button
                style="@style/buttonConmitStyle"
                android:layout_marginLeft="15dp"
                android:text="下一步"
                android:id="@+id/btn_next"
                android:background="@drawable/login_btn1"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/message_line"
        android:layout_above="@+id/message_buttom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ListView
                android:id="@+id/message_add_listview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:dividerHeight="1dp"
                android:divider="@color/line"
                android:minHeight="50dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/ll_add"
                android:background="@drawable/login_btn"

                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_add_preson"
                    android:text="增加新的签证人"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.visabao.machine.widget.SlidingRelativeLayout>