<?xml version="1.0" encoding="utf-8"?>
<com.visabao.machine.widget.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:text="温馨提示"
        android:background="@color/title_bg"
        android:textSize="@dimen/title_textsize"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line10"
        />
    <TextView
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:layout_height="match_parent"
        android:text="@string/reminder_text"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:background="@color/white"
        android:lineSpacingExtra="5dp"
        android:textSize="14dp"
        />
    </LinearLayout>
        <Button
            android:layout_width="275dp"
            android:layout_height="58dp"
            android:text="开始办理"
            android:id="@+id/btn_sign"
            android:textColor="@color/white"
            android:background="@drawable/login_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/btn_margin_bottom"
            android:layout_centerHorizontal="true"
            />
</com.visabao.machine.widget.SlidingRelativeLayout>