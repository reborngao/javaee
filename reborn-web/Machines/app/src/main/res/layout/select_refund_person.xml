<?xml version="1.0" encoding="utf-8"?>
<com.visabao.machine.widget.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:text="选择退款签证人"
        android:id="@+id/ri_title"
        android:textSize="@dimen/title_textsize"
        android:paddingLeft="20dp"
        android:background="@color/title_bg"
        />
    <View
        android:layout_below="@+id/ri_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line_height"
        android:id="@+id/listview_top_line"
        android:background="@drawable/line10"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/srp_line"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        >
        <Button
            style="@style/buttonConmitStyle"
            android:layout_marginLeft="15dp"
            android:text="申请退款"
            android:id="@+id/btn_next"
            android:background="@drawable/login_btn1"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/listview_top_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:background="@color/white"
   >
        <ListView
            android:id="@+id/srp_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>
        <include
            layout="@layout/no_data"
            ></include>
    </RelativeLayout>



</com.visabao.machine.widget.SlidingRelativeLayout>