<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="android:editTextStyle">@style/editText</item>
        <item name="android:gridViewStyle">@style/gridViewStyle</item>
        <item name="android:listViewStyle">@style/listViewStyle</item>
    </style>


    !--重写系统弹出Dialog -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="listViewStyle"  parent="android:Widget.ListView">>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@null</item>
    </style>
    <style name="gridViewStyle" parent="android:Widget.GridView">
        <item name="android:listSelector">@color/transparent</item>
    </style>
    <style name="buttonStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="editText">
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:maxLength">50</item>

    </style>
    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>



    <!--    签到-->
    <style name="loginRadiobtn">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/radiobutton</item>
        <item name="android:textColor">@color/black_white</item>

    </style>




    <!--    首页-->
    <style name="tabStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">74dp</item>
        <!--    <item name="android:layout_weight">1</item>-->
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@drawable/tab_bg</item>
    </style>
    <!--签证列表-->
    <style name="typeTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="typeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="typeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@mipmap/type_bg</item>
    </style>

    <!-- 填写信息-->
    <style name="messageRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black_orange</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/message_radio_bg</item>
    </style>
    <style name="buttonConmitStyle">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">58dp</item>

    </style>
    <style name="messageEidtStyle">

        <item name="android:background">@drawable/eidt_bg</item>
        <item name="android:layout_width">@dimen/message_right_width</item>
        <item name="android:layout_height">@dimen/message_right_heigt</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
